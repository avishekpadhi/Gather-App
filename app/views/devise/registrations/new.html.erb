<%# <h2>Sign up</h2> %>

<div class="flex flex-row w-screen h-screen bg-gray-100 items-center justify-evenly">
<div class="flex h-40  w-1/3 items-center justify-center">
  <%= image_tag "gather-logo.png" %>
</div>
<div class="flex flex-col w-2/3 items-center justify-center ">
<%= form_for(resource, :html => { :style => 'width:400px;' }, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field  my-3">
    <%= f.label :name %><br />
    <%# <div class="w-1/2"> %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"border border-black w-3/4" %>
    <%# </div> %>
  </div>

<div class="flex">
  <div class="field my-3">
    <%= f.label :contact_number %><br />
    <%= f.text_field :contact_number, autofocus: true, autocomplete: "contact_number",class:"border border-black w-3/4" %>
  </div>

  <div class="field my-3">
    <%= f.label :state %><br />
    <%= f.text_field :state, autofocus: true, autocomplete: "state",class:"border border-black w-3/4" %>
  </div>
</div>

<div class="flex">
  <div class="field my-3">
    <%= f.label :city %><br />
    <%= f.text_field :city, autofocus: true, autocomplete: "city",class:"border border-black w-3/4" %>
  </div>

  <div class="field my-3">
    <%= f.label :location %><br />
    <%= f.text_field :location, autofocus: true, autocomplete: "location",class:"border border-black w-3/4" %>
  </div>
</div>

  <div class="field my-3">
    <%= f.label :date_of_birth %><br />
    <%= f.date_field :date_of_birth, autofocus: true, autocomplete: "date_of_birth" %>
  </div>

  <div class="field my-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"border border-black w-3/4" %>
  </div>


  <div class="field my-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"border border-black w-3/4" %>
  </div>

  <div class="field my-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"border border-black w-3/4" %>
  </div>

  <div class="actions flex justify-start items-baseline">
    <%= f.submit "Sign up", class:"border border-black px-4 py-2 my-5 text-white bg-black w-1/2 mx-5 justify-start  hover:scale-90 duration-300 "%>
  <%= render "devise/shared/links", class:"hover:underline " %>
    
  </div>

<% end %>



</div>
</div>





