<div class="flex flex-row w-screen h-screen bg-gray-100 items-center justify-evenly">
<div class="flex h-40  w-1/3 items-center justify-center">
  <%= image_tag "gather-logo.png" %>
</div>

<%= form_for(resource, as: resource_name,:html => { :style => 'width:400px;' }, url: session_path(resource_name),class:"flex items-center justify-center") do |f| %>
  <div class="field my-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"border border-black w-3/4" %>
  </div>

  <div class="field my-4">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"border border-black w-3/4" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in",class:"border border-black w-3/4 text-white bg-black hover:text-black hover:bg-blue-400 hover:scale-90 duration-300 py-2 my-2" %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>


</div>


